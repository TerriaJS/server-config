{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Vector tile server stack. Launches EC2 t2.micro instance with Amazon linux AMI and installs relevant packages",
  "Metadata": {},
  "Outputs": {
    "URL": {
      "Value": { "Fn::Sub": "${AWS::StackName}.${HostedZoneName}" }
    }
  },
  "Parameters": {
    "Ec2Type": {
      "Default": "t2.micro",
      "Type": "String"
    },
    "HostedZoneName": {
      "Default": "terria.io.",
      "Type": "String"
    },
    "ServerVersion": {
      "Type": "String"
    }
  },
  "Resources": {
    "Ec2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": { "Ref": "Ec2Type" },
        "SecurityGroups": ["crisp-vector-tiles"],
        "KeyName": "terria-crisp",
        "ImageId": "ami-55d4e436",
        "IamInstanceProfile" : {
          "Ref": "S3InstanceProfile"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "\n", [
                "#!/bin/bash",
                "curl --silent --location https://rpm.nodesource.com/setup_4.x | bash -",
                "yum -y install nodejs",
                "npm install -g forever",
                "mkdir /etc/vector-tiles",
                {"Fn::Sub": "aws s3 cp --region ap-southeast-2 s3://vector-tile-server/server-${ServerVersion}.tar.gz /tmp"},
                {"Fn::Sub": "tar -xzf /tmp/server-${ServerVersion}.tar.gz -C /etc/vector-tiles"},
                {"Fn::Sub": "/etc/vector-tiles/download_data.py ${AWS::StackName}"},
                "echo 'sudo -u  ec2-user forever start /etc/vector-tiles/forever.json' >> /etc/rc.local",
                "echo 'iptables -t nat -A PREROUTING -p tcp --dport 80 -j REDIRECT --to-ports 8000' >> /etc/rc.local",
                "/etc/rc.local"
              ]
            ]
          }
        }
      }
    },
    "S3InstanceProfile": {
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "S3Role"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },
    "S3Role": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "s3:Get*",
                    "s3:List*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            },
            "PolicyName": "S3Read"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "DnsRecord" : {
      "Type" : "AWS::Route53::RecordSet",
      "Properties" : {
         "HostedZoneName" : {
            "Ref" : "HostedZoneName"
         },
         "Comment" : "DNS name for my instance.",
         "Name" : {
            "Fn::Join": [ ".", [
              { "Ref": "AWS::StackName" },
              { "Ref": "HostedZoneName" }
            ] ]
         },
         "Type" : "A",
         "TTL" : "900",
         "ResourceRecords" : [
            { "Fn::GetAtt" : [ "Ec2Instance", "PublicIp" ] }
         ]
      }
   }
  }
}